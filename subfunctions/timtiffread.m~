function [stack,nSlices] = timtiffread(varargin)
if nargin == 0 
    disp('no arguments loaded into tiff reader, cannot read');
    stack = [];
    nSlices = 0;
    return
    
elseif nargin == 1
    [stack,nSlices] = readTifStackWithImRead(varargin{1});
    return
else
    if nargin{2} == 1
        [stack,nSlices] = readTifStackWithImRead(varargin{1});
        return
    elseif nargin{2} == 2
        stack = tiffread5(varargin{1})
        nSlices = 1;
        if ndims(stack) == 3
            nSlices = size(s
        return
    end
end



end

